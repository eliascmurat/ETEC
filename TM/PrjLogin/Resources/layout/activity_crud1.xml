<?xml version="1.0" encoding="utf-8"?>
<LinearLayout     
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp">
    <TextView
        android:text="CRUD"
        android:textColor="#ecf0f1"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/txtTitle"
        tools:ignore="HardcodedText" />
    <EditText
        android:inputType="text"
        android:hint="Author: "
        android:digits="0123456789´`^~ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:maxLength="50"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:textColor="#ecf0f1"
        android:textColorHint="#bdc3c7"
        app:backgroundTint="#bdc3c7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/edtAuthor"
        tools:ignore="HardcodedText,XmlNamespace" />
    <EditText
        android:inputType="text"
        android:hint="Book name: "
        android:digits="0123456789´`^~ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:maxLength="50"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:textColor="#ecf0f1"
        android:textColorHint="#bdc3c7"
        app:backgroundTint="#bdc3c7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/edtBookName"
        tools:ignore="HardcodedText,XmlNamespace" />
    <EditText
        android:inputType="text"
        android:hint="Book gender: "
        android:digits="0123456789´`^~ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:maxLength="50"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:textColor="#ecf0f1"
        android:textColorHint="#bdc3c7"
        app:backgroundTint="#bdc3c7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/edtBookGender"
        tools:ignore="HardcodedText,XmlNamespace" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <Button
            android:text="Add"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:onClick="BtnSave_Click"
            android:id="@+id/btnAdd"
            tools:ignore="HardcodedText" />
        <Button
            android:text="Edit"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:onClick="BtnCancel_Click"
            android:id="@+id/btnEdit"
            tools:ignore="HardcodedText" />
        <Button
            android:text="Delete"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:onClick="BtnCancel_Click"
            android:id="@+id/btnDelete"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lstBook" />
</LinearLayout>
